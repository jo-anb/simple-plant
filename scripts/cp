#!/usr/bin/env bash

set -e

cd "$(dirname "$0")/.."

echo "Copying card"
mkdir -p ${PWD}/config/www/community/simple-plant-card/
cp -r "${PWD}"/simple-plant-card/dist/* \
   "${PWD}/config/www/community/simple-plant-card/"

if [[ "$1" == "--all" ]]
then
    echo "Copying component"
    mkdir -p "${PWD}/config/custom_components/simple_plant_extended/"
    cp -r "${PWD}"/custom_components/simple_plant_extended/* \
        "${PWD}/config/custom_components/simple_plant_extended/";
fi